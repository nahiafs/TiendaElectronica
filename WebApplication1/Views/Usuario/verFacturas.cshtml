@using MusicaLMFL.Modelo;
@model List<object>
@{
    ViewBag.Title = "verFacturas";
    Layout = "~/Views/Plantilla/Plantilla.cshtml";
}

<h2 class="form-group text-center">Tus facturas</h2>

<br/>

<div>
    <center>
        <div class="d-flex flex-row mb-3">
            @foreach (TFactura factura in Model)
            {
                <div class="p-2">
                    <div>
                        <img src="~/images/factura.png" alt="Logo" width="200" height="200">
                    </div>
                    <div class="form-group text-center">
                        @Html.ActionLink("Factura del " + @factura.FechaFactura, "detalleFactura", "Usuario", new { CodFactura = @factura.CodFactura }, new { @class = "text-dark" })
                    </div>
                    <div><br /></div>
                </div>
            }
        </div>
    </center>
</div>

